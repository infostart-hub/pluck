Описание.Имя("pluck")
        .Версия("1.3.0")
        .Автор("Artur Ayukhanov (Infostart.ru)")
        .АдресАвтора("aartbear@gmail.com")
        .Описание("Данное приложение получает имена объекта метаданных из файлов 1С")
        .ВерсияСреды("1.0.20")
        .ВключитьФайл("src")
        .ВключитьФайл("oscript_modules")
        .ВключитьФайл("oscript.cfg")
        .ВключитьФайл("features")
        .ВключитьФайл("packagedef")
        .ЗависитОт("cli")
        .ЗависитОт("fs", "1.1.0")
        .ЗависитОт("logos", "1.3.0")
        .ЗависитОт("tempfiles", "1.0.0")
        .ЗависитОт("v8unpack", "1.0.4")
        // пока работает только на этой версии, на 0.7.1 есть баг
        .ЗависитОт("yabr", "0.6.2") 
        .ИсполняемыйФайл("src/pluck.os", "pluck")

        ;
